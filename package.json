{
  "name": "sisix-3d",
  "version": "1.0.0",
  "description": "Horario 3D con gestión de tareas - Sistema de visualización interactivo",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win portable",
    "electron:build:linux": "npm run build && electron-builder --linux AppImage",
    "electron:build:arch": "npm run build && electron-builder --linux pacman tar.gz",
    "electron:build:all": "npm run build && electron-builder --win portable --linux AppImage pacman"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"  },
  "build": {
    "appId": "com.sisix.horario3d",
    "productName": "Horario 3D",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Windows-Portable.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Windows-Portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Horario 3D"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "pacman",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "category": "Education",
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}"
    },
    "appImage": {
      "license": "LICENSE",
      "artifactName": "${productName}-${version}-Linux-Portable.${ext}"
    },
    "pacman": {
      "depends": []
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.education"
    }  }
}
